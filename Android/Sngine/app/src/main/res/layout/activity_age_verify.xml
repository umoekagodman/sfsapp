<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <!-- TextureView for video -->
    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:fitsSystemWindows="false"
        android:padding="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="StrangersForSex.com"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Worldwide Escort Directory"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clients only contact escorts when they are serious about their intentions. No time-wasters allowed!"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you an adult?"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="32dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="32dp">

                    <Button
                        android:id="@+id/btnYes"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:text="Yes"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_border_white"
                        android:layout_marginEnd="20dp" />

                    <Button
                        android:id="@+id/btnNo"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:text="No"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_border_white" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>
